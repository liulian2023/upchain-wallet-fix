<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.LegalActivity">
    <include layout="@layout/common_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/private_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/white_normal_ripple">

            <TextView
                android:id="@+id/private_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/privacy_policy"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/private_iv"
                android:layout_width="7dp"
                android:layout_height="11dp"
                android:layout_alignTop="@+id/private_tv"
                android:layout_alignBottom="@+id/private_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#E7EAED"/>

        <RelativeLayout
            android:id="@+id/terms_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_normal_ripple">

            <TextView
                android:id="@+id/terms_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/Terms_of_Servers"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/terms_iv"
                android:layout_width="7dp"
                android:layout_height="11dp"
                android:layout_alignTop="@+id/terms_tv"
                android:layout_alignBottom="@+id/terms_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right_arrow" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#E7EAED"/>
    </LinearLayout>

</LinearLayout>