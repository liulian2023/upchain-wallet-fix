<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/delete_iv"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bookmark_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:padding="8dp"
        app:layout_goneMarginStart="16dp"
        android:src="@drawable/web_site"
        app:layout_constraintBottom_toBottomOf="@+id/delete_iv"
        app:layout_constraintStart_toEndOf="@+id/delete_iv"
        app:layout_constraintTop_toTopOf="@+id/delete_iv" />

    <TextView
        android:id="@+id/bookmark_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="name"
        app:layout_constraintStart_toEndOf="@+id/bookmark_iv"
        app:layout_constraintTop_toTopOf="@+id/bookmark_iv" />


    <TextView
        android:id="@+id/bookmark_url_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amount"
        android:textColor="#ACB5C3"
        app:layout_constraintBottom_toBottomOf="@+id/bookmark_iv"
        app:layout_constraintStart_toStartOf="@+id/bookmark_title_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>