<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/add_token_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_token_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="LON"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/add_token_iv"
        app:layout_constraintTop_toTopOf="@+id/add_token_iv" />

    <TextView
        android:id="@+id/add_token_address_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginRight="50dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="#666666"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_token_iv"
        app:layout_constraintEnd_toStartOf="@+id/add_token_add_iv"
        app:layout_constraintStart_toStartOf="@+id/add_token_name_tv" />

    <ImageView
        android:id="@+id/add_token_add_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"

        android:src="@drawable/round_add_black"
        app:layout_constraintBottom_toBottomOf="@+id/add_token_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_token_iv" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/split"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_token_add_iv"
        app:layout_constraintStart_toStartOf="@id/add_token_iv" />
</androidx.constraintlayout.widget.ConstraintLayout >